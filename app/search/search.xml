<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

  <ActionBar>
    <Label class="ibm7 h2" text="Search" />
  </ActionBar>

  <GridLayout class="page__content">
    <Label class="page__content-icon fas" text="&#xf002;"></Label>
    <StackLayout>
      <!-- Search bar -->
      <SearchBar row="0" hint="Search everything..." text="{{ searchQuery }}" submit="onSearchSubmit" clear="onSearchClear" textChange="onSearchTextChanged" />
    </StackLayout>
  </GridLayout>

</Page>