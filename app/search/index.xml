<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

  <ActionBar>
    <Label class="ibm7 h2" text="Search" />
  </ActionBar>

  <GridLayout rows="*, *" class="container">
    <StackLayout row="0">
      <!-- Search bar -->
      <SearchBar hint="Search..." text="{{ searchQuery }}" submit="onSearchSubmit" clear="onSearchClear" textChange="onSearchTextChanged" />
    </StackLayout>
    <StackLayout row="1">
      <Label class="icon fas h1" text="&#xf002;"></Label>
    </StackLayout>
  </GridLayout>

</Page>