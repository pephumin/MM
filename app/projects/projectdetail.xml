<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

  <ActionBar>
    <NavigationButton tap="onBackButtonTap" android.systemIcon="menu_back" />
    <Label class="ibm7 h2" text="{{ title }}" />
  </ActionBar>

  <ScrollView>
    <GridLayout rows="auto, auto, auto" columns="*" class="container">

      <StackLayout row="0" marginTop="10">
        <StackLayout>
          <Label class="ibm7 h3" text="Description: " marginLeft="8"></Label>
          <TextView autocapitalizationType="none">
            <FormattedString>
              <Span class="pdetail" text="{{ description === null ? '' : description }}" textWrap="true" marginLeft="8" />
            </FormattedString>
          </TextView>
          <!-- <View class="horizontal-line"></View> -->
        </StackLayout>
      </StackLayout>

      <StackLayout row="1">

        <StackLayout row="0" orientation="horizontal">
          <Label class="ibm7 h3" text="Project No. " marginLeft="8"></Label>
          <Label class="ibm7 h3" text="{{ id }}" marginLeft="8"></Label>
        </StackLayout>

        <StackLayout orientation="horizontal">
          <Label class="ibm7 h3" text="Project Type: " marginLeft="8"></Label>
          <Label class="ibm7 h3" text="{{ type }}" marginLeft="8"></Label>
        </StackLayout>

        <StackLayout orientation="horizontal">
          <Label class="ibm7 h3" text="Project Name: " marginLeft="8"></Label>
          <Label class="ibm7 h3" text="{{ name }}" marginLeft="8"></Label>
        </StackLayout>

      </StackLayout>

      <StackLayout row="2" colSpan="2">
        <Button class="btn btn-primary" text="View questions" tap="onViewQuestions"></Button>
        <Button class="btn btn-outlune" text="<< Go back" tap="goProject"></Button>
      </StackLayout>

    </GridLayout>
  </ScrollView>

</Page>
