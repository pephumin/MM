<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd" class="page">

  <ActionBar>
    <NavigationButton tap="onBackButtonTap" android.systemIcon="menu_back" />
    <Label class="ibm7 h2" text="Reset Password" />
  </ActionBar>

  <ScrollView>
    <StackLayout class="container">

      <!-- Title -->
      <Label text="Forgot Password" class="title" />
à¹‰
     <StackLayout width="80%" marginTop="0" marginBottom="0">
        <GridLayout columns="auto, *, auto" class="input-container">
          <Label col="0" class="inputicon fas" text="&#xf0e0;"></Label>
          <TextField col="1" hint="Your Email" text="{{ email }}" keyboardType="email" autocapitalizationType="none" />
          <Label col="2" class="inputicon fas" text="&#xf00c;" color="green" visibility="{{ label1Visibility }}"></Label>
        </GridLayout>

        <!-- Feedback -->
        <Label text="{{ feedbackMessage }}" class="feedback" textWrap="true" />

        <!-- Submit Button -->
        <Button text="Reset Password" tap="{{ forgotPassword }}" class="btn btn-primary" />

        <!-- Back to Login -->
        <StackLayout orientation="horizontal" horizontalAlignment="center" marginTop="10">
          <Button text="Back to Login" tap="{{ goToLogin }}" class="btn btn-link" />
        </StackLayout>
      </StackLayout>
    </StackLayout>
  </ScrollView>

</Page>

