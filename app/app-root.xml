<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <TabView androidTabsPosition="bottom" selectedIndex="{{ selectedTabIndex }}">

    <TabViewItem title="Home">
      <StackLayout>
        <Frame defaultPage="home/home" />
        <Label class="icon fas" text="&#xf002;"></Label>
        <Label class="ibm7 h2" text="Home"></Label>
      </StackLayout>
    </TabViewItem>

    <TabViewItem title="Browse">
      <StackLayout>
        <Frame defaultPage="browse/browse" />
        <Label class="icon fas" text="&#xffae;"></Label>
        <Label class="ibm7 h2" text="Browse"></Label>
      </StackLayout>
    </TabViewItem>

    <TabViewItem title="Search">
      <StackLayout>
        <Frame defaultPage="search/search" />
        <Label class="icon fab" text="&#xf3eb;"></Label>
        <Label class="ibm7 h2" text="Search"></Label>
      </StackLayout>
    </TabViewItem>

    <TabViewItem title="Question">
      <StackLayout>
        <Frame defaultPage="question/question" />
        <Label class="icon fab" text="&#xf3eb;"></Label>
        <Label class="ibm7 h2" text="Question"></Label>
      </StackLayout>
    </TabViewItem>

    <TabViewItem title="User">
      <StackLayout>
        <Frame defaultPage="user/login" />
        <Label class="icon fab" text="&#xf508;"></Label>
        <Label class="ibm7 h2" text="User"></Label>
      </StackLayout>
    </TabViewItem>

  </TabView>
</Page>
