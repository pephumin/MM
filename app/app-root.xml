<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  <TabView androidTabsPosition="bottom" selectedIndex="{{ selectedTabIndex }}">

    <TabViewItem title="Projects">
      <StackLayout>
        <Frame defaultPage="projects/index" />
        <Label class="ibm7 h2" text="Projects"></Label>
      </StackLayout>
    </TabViewItem>

    <TabViewItem title="Search">
      <StackLayout>
        <Frame defaultPage="search/index" />
        <Label class="ibm7 h2" text="Search"></Label>
      </StackLayout>
    </TabViewItem>


    <TabViewItem title="User">
      <StackLayout>
        <Frame defaultPage="user/index" />
        <Label class="ibm7 h2" text="User"></Label>
      </StackLayout>
    </TabViewItem>

  </TabView>
</Page>
