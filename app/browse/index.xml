<Page navigatingTo="onNavigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">

  <ActionBar>
    <Label class="ibm7 h2" text="Browse" />
  </ActionBar>

  <ListView items="{{ items }}" itemTap="onItemTap">
  <ListView.itemTemplate>

    <GridLayout padding="16" rows="*" columns="20, auto, *, auto">
      <ContentView col="0" width="20" height="20" borderRadius="10" 
                  backgroundColor="{{ status === 5 ? '#65adf1' : '#e0e0e0' }}" />
      <Label class="ibm5" text="{{ id }}" col="1" textWrap="true" marginLeft="8" />
      <Label class="ibm7" text="{{ title }}" col="2" textWrap="true" marginLeft="8" />
      <Label class="ibm5" text="NEW" col="3" color="#65adf1" marginRight="4" 
             visibility="{{ status === 5 ? 'visible' : 'collapsed' }}" />
    </GridLayout>

  </ListView.itemTemplate>
  </ListView>

</Page>
